@model Reparation.Models.UserAccounts

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<body class="login-pagebg">


    <div class="login-page has-success">
        <div class="form">
            <form class="login-page">
                <p class="text-center no-trans">
                    <img src="~/images/logo.png" width="60" , height="60" />
                </p>
                <hr />
                <div class="help-block">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "font-size:10px;" })
                </div>


                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    @Html.EditorFor(model => model.Anummer, new { htmlAttributes = new { Placeholder = "Anställningsnummer", @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(model => model.Anummer, "", new { @class = "text-danger" })

                <br />
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>

                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { Placeholder = "Lösenord", @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })


                <br />
                <center>
                    <input type="submit" value="Logga in" class="btn btn-primary btn-lg btn-block" @*style="background-color:#004785;color:#ffffff"*@ />
                </center>
                @*<div class="text-center">
                        @Html.ActionLink("Skapa ny användare", "Register")
                    </div>*@
            </form>
        </div>
    </div>
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    <br />
    <br />
    <br />
    <br />

</body>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
